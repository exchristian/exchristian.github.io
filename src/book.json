{
  "language": "zh-hans",


  "plugins": [
    "github",
    "tbfed-pagefooter",
    "anchor-navigation-ex",
    "-sharing",
    "sharing-plus",
    "-lunr", 
    "-search", 
    "search-pro",
    "pageview-count",
    "splitter",
    "popup",
    "custom-favicon",
    "expandable-chapters"

  ],

  "pluginsConfig": {
    "github": {
      "url": "https://github.com/exchristian/exchristian.github.io"
    },
    "tbfed-pagefooter": {
      "copyright": "Copyright &copy exchristian 2018",
      "modify_label": "该文件修订时间：",
      "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "anchor-navigation-ex": {
      "isRewritePageTitle": false,
      "tocLevel1Icon": "fa fa-hand-o-right",
      "tocLevel2Icon": "fa fa-hand-o-right",
      "tocLevel3Icon": "fa fa-hand-o-right"
    },
    "fontsettings": {
      "size": 1
    },
    "pdf": {
      "pageNumbers": true,
      "fontSize": 18,
      "paperSize": "a5"

    },
    "favicon": "images/favicon.png"

  }
}